<% @posts.each_with_index do |post, index|%>
    <% if index%2 == 0 %> <div class='row'> <div class="col-lg-3 col-lg-offset-3"><% end %>
    <% if index%2 != 0 %>  <div class="col-lg-3"> <% end %>
      <div class="content-post">
        <div class="title">
          <h3 class="text-default"><%= post.title %></h3>
        </div>  
        <div class="shrink">
          <%= link_to image_tag(post.image, size: '120', class: 'img-circle'), 
            category_post_path(@category, post), class: "pull-right text-success" %>
            <p><%= truncate(strip_tags(post.body), length: 100) %></p>
        </div>
      </div>
  
      </div>  
    <% if index%2 != 0 %> </br></div> <% end %>
<% end %>
