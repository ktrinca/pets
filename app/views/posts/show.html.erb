<section id="categories">
  <div class="container">
    <%= render('common/messages') %>
<div class="row">
  <div class="col-lg-12 text-center">
    <div class="page-header">
      <h1><%= @category.name %></h1>
      <hr class="star-primary">
    </div>
  </div>
</div>
<div class="row" > 
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><h3><%= @post.title%></h3></h3>
      </div>
      <div class="panel-body">
        <div class="media-body" >
          <div class="snippet">
            <a class="pull-left text-success" href="venue.php"><%= image_tag @post.image, size: '140', class: 'img-circle'%></a>
            <p><%= @post.body %></p>      
          </div>
        </div>
      </div>
    </div>
    
  </div>
  
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Datos de contacto</h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Nombre</dt>
          <dd><%= @post.contact.name %></dd>
          <dt>Apellido</dt>
          <dd><%= @post.contact.last_name %></dd>
          <dt>Tel√©fono</dt>
          <dd><%= @post.contact.phone %></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
  <div class="container-fluid clearfix">
    <%= link_to 'Back to listing', category_posts_path(@category, pet: params[:pet]), class: 'btn btn-default navbar-btn btn-sm pull-left' %>
    <div class="btn-group pull-right">
      
        <%= link_to category_post_post_images_path(@category, @post), class: 'btn btn-sm btn-default navbar-btn' do %>
          <i class="fa fa-image"></i> <span class="hidden-xs">Images</span>
        <% end %>
      
      
        <%= link_to edit_category_post_path(@category, @post), class: 'btn btn-sm btn-default navbar-btn' do %>
          <i class="fa fa-edit"></i> <span class="hidden-xs">Edit</span>
        <% end %>
      
    </div>
  </div>
</nav>
</div>
</section>