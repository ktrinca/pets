<div class="row">
  <div class="col-md-12">
    <div class="page-header">
      <h1>Detalle de la Publicación <%= @category.name %></h1>
    </div>
    <%= render('common/messages') %>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Post info</h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Name</dt>
          <dd><%= @post.title %></dd>
          <dt>Description</dt>
          <dd><%= @post.body %></dd>
        </dl>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Datos de contacto</h3>
      </div>
      <div class="panel-body">
        <dl>
          <dt>Nombre</dt>
          <dd><%= @post.contact.name %></dd>
          <dt>Apellido</dt>
          <dd><%= @post.contact.last_name %></dd>
          <dt>Teléfono</dt>
          <dd><%= @post.contact.phone %></dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-md-6 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Fotos</h3>
      </div>
      <div class="panel-body">
        <% @category.posts.each do |category_image| %>
          <%= image_tag category_image.image.url, width: 100 %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
  <div class="container-fluid clearfix">
    <%= link_to 'Back to listing', category_path(@category), class: 'btn btn-default navbar-btn btn-sm pull-left' %>
    <div class="btn-group pull-right">
      
    </div>
  </div>
</nav>
