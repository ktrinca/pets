      <div class="panel-heading">
        <h3 class="panel-title">Posts</h3>
      </div>
      <div class="panel-body">
        <% @category.posts.each do |category_image| %>
          <%= image_tag category_image.image.url, width: 100 %>
        <% end %>
      </div>
    </div>
  </div>
</div>
