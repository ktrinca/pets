<h1>Listing cities</h1>

<table>
  <thead>
    <tr>
      <th>City</th>
      <th>Province</th>
      <th>Address</th>
      <th>Address 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.city %></td>
        <td><%= city.province_id %></td>
        <td><%= city.address %></td>
        <td><%= city.address_2 %></td>
        <td><%= link_to 'Show', city %></td>
        <td><%= link_to 'Edit', edit_city_path(city) %></td>
        <td><%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

