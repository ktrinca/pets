<div class="search">
  <%= simple_form_for @post_search, url: category_posts_path(@category), html: { role: 'form', method: :get, class: 'form-inline clearfix' } do |f| %>
  <div class="pull-left">
    <%= f.input :look_for, placeholder: 'Buscar...', input_html: { class: 'form-control' }, label_html: { class: 'sr-only' } %>
    <%= f.input :pet, collection: @post_form_presenter.pets, include_blank: 'todos', input_html: { class: 'form-control'}, required: false, label_html: { class: 'sr-only' },:multiple => true, :selected => ['1'] %>
    

   
    <%= button_tag class: 'btn btn-primary', name: nil do %>
      <i class="fa fa-filter"></i> <span class="hidden-xs">Buscar</span>
    <% end %>
    <%= link_to category_posts_path(@category), class: 'btn btn-default' do %>
      <i class="fa fa-ban"></i> <span class="hidden-xs">Borrar</span>
    <% end %>
  </div>
  
<% end %>
</div>