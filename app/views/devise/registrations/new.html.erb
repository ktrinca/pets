<section id="contact">
  <div class="container">	
    <div class="row">
      <div class="col-lg-12 text-center">	
       <h2>Nuevo Usuario</h2>
       <hr class="star-primary">
      </div> 
    </div>

    <div class="row">
    	<div class="col-lg-8 col-lg-offset-2">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { role: 'form'}) do |f| %>
          <div class="row control-group">
            <%= f.error_notification %> 
          </div>
          
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.input :name, required: true, autofocus: true, class: "form-control", placeholder: "Nombre"%>
            </div> 
          </div>

          <div class="row control-group">
          	<div class="form-group col-xs-12 floating-label-form-group controls">
          	  <%= f.input :last_name, required: true, autofocus: true, class: "form-control", placeholder: "Apellido"%>
            </div>
          </div>

          <div class="row control-group">
          	<div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.input :email, required: true, autofocus: true, class: "form-control", placeholder: "Email"%>
            </div>  
          </div>

          <div class="row control-group">
          	<div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.input :password, required: true, class: "form-control", placeholder: "Password" %>
            </div>  
          </div>    
          
          <div class="row control-group">
          	<div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.input :password_confirmation, required: true, class: "form-control", placeholder: "Confirma Password" %>
            </div>  
          </div>
            <div class="row">
              </br></br>
              <div class="form-actions">
                <%= f.button :submit, "Registarme", class: "btn btn-success" %>
              </div>
            </div>  
          </div>  
        <% end %>
      </div>
    </div>    
  </div>
</section>