<section id="contact">
  <div class="row">
    <div class="col-md-12 text-center">
      <h2>Ingresar</h2>
        <hr class="star-primary">
    </div>  
  </div>
  
  <div class="row">
    <div class="col-lg-6 col-lg-offset-3">
      
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' } ) do |f| %>
        <%= f.error_notification %>
        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :email, autofocus: true, input_html: { class: 'form-control' }, required: true, placeholder: "Email" %>
              <p class="help-block text-danger"></p>
          </div>
        </div>

        <div class="row control-group">
          <div class="form-group col-xs-12 floating-label-form-group controls">
            <%= f.input :password, autofocus: true, input_html: { class: 'form-control' }, required: true, placeholder: "Password" %>
              <p class="help-block text-danger"></p>
          </div>
        </div>

        <div class="row control-group">
          <div class="form-group col-xs-12 label-form-group controls">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>

        <div class="col-lg-18 text-center">
          </br>
          <%= f.button :submit, "Iniciar Sesión", class: 'btn btn-block btn-success' %>
        </div>  	
      
      <% end %>
      
      <div class="form-group col-xs-12 floating-label-form-group controls">
        </br>
        <div class="text-center"> <p> Ó </p> </div>
      </div> 

      <%= render "devise/shared/links" %>
    
    </div>  
  
  </div>	

</section>