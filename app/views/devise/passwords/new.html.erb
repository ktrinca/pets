<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <h2>Olvidó su Clave?</h2>
        <hr class="star-primary">
      </div>  
    </div>   
    
    <div class="row">
      <div class="col-lg-6 col-lg-offset-3">
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, role: 'form' }) do |f| %>
          <%= f.error_notification %>
          <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
              <%= f.input :email, autofocus: true, input_html: { class: 'form-control' }, required: true, placeholder: "Email" %>  
            </div>
          </div>
          <div class="col-lg-18 text-center">
            </br>
            <%= f.button :submit, "Enviarme Instrucciones para Restablecer la Contraseña", class: 'btn btn-block btn-success' %>
          </div>      

        <% end %>

        <div class="form-group col-xs-12 floating-label-form-group controls">
          </br>
          <div class="text-center"> <p> Ó </p> </div>
        </div> 

        <%= render "devise/shared/links" %>  
      </div>  
    </div> 	

  </div>	

</section>