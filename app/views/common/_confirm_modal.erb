<div id="confirm-modal" class="modal fade">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-body">
        <p><%= text %></p>
      </div>
      <div class="modal-footer">
        <button id="cancel" type="button" class="btn btn-default" data-target="<%= target %>">Do Not Email</button>
        <button id="send" type="button" class="btn btn-primary" data-target="<%= target %>">Send Email</button>
      </div>
    </div>
  </div>
</div>
