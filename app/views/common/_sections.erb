<section id="categories">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2>Categorias</h2>
        <hr class="star-primary">
      </div>
    </div>
   
    <div class="row">
      <% @categories.each do |category|%>
        <div class="col-sm-6 portfolio-item">
          <a href="<%="##{category.name_as_folder}Modal"%>" class="portfolio-link" data-toggle="modal">
            <div class="caption">
              <div class="caption-content">
                <i class="fa fa-search-plus fa-3x"><%= category.name %></i>
              </div>
            </div>
            <%= image_tag(category.image, class: "img-responsive")%>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</section>

<%= render('posts/modals', categories: @categories) %>