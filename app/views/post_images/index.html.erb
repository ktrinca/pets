<div id="images-container" data-url="<%= item_item_images_path(@item) %>" data-browse-button="images-add" data-list="item_image">
  <div class="row">
    <div class="col-md-12">
      <div class="page-header">
        <h1>Item Images listing <small>Item #<%= @item.id %></small></h1>
      </div>
      <%= render('common/messages') %>
      <div class="panel panel-default">
        <table class="table table-striped table-condensed">
          <thead>
            <%= render('header') %>
          </thead>
          <tbody id="item_image" class="sortable" data-url="<%= sort_item_item_images_path(@item) %>">
            <%= render(@item_images) %>
          </tbody>
        </table>
        <div class="panel-footer">
          <%= paginate(@item_images, theme: 'twitter-bootstrap-3') %>
        </div>
      </div>
    </div>
  </div>
  <nav class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
    <div class="container-fluid clearfix">
      <% if policy(ItemImage.new).new? %>
        <%= link_to '#', class: 'btn btn-primary navbar-btn pull-left', id: 'images-add' do %>
          <span class="glyphicon glyphicon-upload"></span> Upload photos
        <% end %>
      <% end %>
      <% if policy(@item).edit? %>
        <%= link_to item_path(@item), class: 'btn navbar-btn btn-sm btn-default pull-right' do %>
          <i class="fa fa-search"></i> <span class="hidden-xs">Back to Item</span>
        <% end %>
      <% end %>
    </div>
  </nav>
</div>
