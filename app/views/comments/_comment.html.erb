<div class="well">
  <h2><%= comment.title %></h2>
  <p class="text-muted">Comentado por <strong><%= comment.title %></strong> el
    <%= l(comment.created_at, format: '%d %B %Y,  %H:%M:%S') %></p>
 
  <blockquote>
    <p><%= comment.body %></p>
  </blockquote>
  
  <div id="reply<%=comment.id%>">
  
  </div>

  <% from_reply_form ||= nil %>
<% unless from_reply_form %>
  <% if comment.leaf? %>
    <small class="text-muted">There are no replies yet - be the first one to reply!</small>
  <% end %>
  <p><%= link_to 'Responder', category_post_new_comment_path(@category, @post, comment.id), class: 'pull-right', remote: true  %></p>
<% end %>
</div>